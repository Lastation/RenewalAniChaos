		{ eprintf("　\x04치명상 치료까지 : {}초　\x1FO Skill \x04사용가능 \x08OFF　\x07Level \x04{}", v.DeathCount[cp], v.Level[cp]); }
	}
	else if (Deaths((13), (0), 1, (210)) && v.Unique_Cool[cp] != 0)
	{
		if (value == 0)
		{ eprintf("　\x04치명상 치료까지 : {}초　\x1FO \x1ECooltime \x04{}초 \x1CON　\x07Level \x04{}", v.DeathCount[cp], v.Unique_Cool[cp], v.Level[cp]); }
		if (value == 1)
		{ eprintf("　\x04치명상 치료까지 : {}초　\x1FO \x1ECooltime \x04{}초 \x08OFF　\x07Level \x04{}", v.DeathCount[cp], v.Unique_Cool[cp], v.Level[cp]); }
	}
}

function Announce_Normal(cp)
{
	if (Deaths((13), (10), 0, (210)))
	{
		if (v.Unique_Cool[cp] == 0) 
		{ eprintf("　\x1B남은 포션 갯수 \x04: {}　\x1FO Skill \x04사용가능　\x07Level \x04{}", v.Potion[cp], v.Level[cp]); }
		else
		{ eprintf("　\x1B남은 포션 갯수 \x04: {}　\x1FO \x1ECooltime \x04{}초　\x07Level \x04{}", v.Potion[cp], v.Unique_Cool[cp], v.Level[cp]); }
	}
	else 
	{
		if (v.Unique_Cool[cp] == 0)
		{ eprintf("　\x04치명상 치료까지 : {}초　\x1FO Skill \x04사용가능　\x07Level \x04{}", v.DeathCount[cp], v.Level[cp]); }
		else 
		{ eprintf("　\x04치명상 치료까지 : {}초　\x1FO \x1ECooltime \x04{}초　\x07Level \x04{}", v.DeathCount[cp], v.Unique_Cool[cp], v.Level[cp]); }
	}
}

function Announce_Ingame(cp)
{
	if (Score((13), (7), (1), 24))
	{
		if (Deaths((13), (10), 0, (210)))
		{ eprintf("　\x1B남은 포션 갯수 \x04: {}　\x1FExp \x04{}/{}　\x07Level \x04{}", v.Potion[cp], v.EXP_Now[cp], v.EXP_Need[cp], v.Level[cp]); }
		else
		{ eprintf("　\x04치명상 치료까지 : {}초　\x1FExp \x04{}/{}　\x07Level \x04{}", v.DeathCount[cp], v.EXP_Now[cp], v.EXP_Need[cp], v.Level[cp]); }
	}
	else
	{
		switch (v.Hero_Num[cp])
		{
		case 2:
			if (Switch((6), (2))) { Announce_Adv(0, cp); }
			if (Switch((6), (3))) { Announce_Adv(1, cp); }
			break;
		case 7:
			if (Switch((9), (2))) { Announce_Adv(0, cp); }
			if (Switch((9), (3))) { Announce_Adv(1, cp); }
			break;
		case 15:
			if (Switch((19), (2))) { Announce_Adv(0, cp); }
			if (Switch((19), (3))) { Announce_Adv(1, cp); }
			break;
		case 16:
			if (Deaths((13), (0), 1, (204)) && Deaths((13), (1), 7, (204)))
			{ Announce_Adv(0, cp); }
			else
			{ Announce_Normal(cp); }
			break;
		default:
			Announce_Normal(cp);
			break;
		}
	}
}

function Announce_Character(cp)
{
	if(Switch(255, Cleared))
	{
		eprintf("　\x17[ \x04{:s}\x17 ]　\x07Exp \x04{}　\x1FCS \x04{}　\x08K\x04/\x1BD \x08{}\x04/\x1B{}"
		, v.Hero_Name[v.Hero_Num[cp]]
		, v.Exp_Player[cp]
		, v.CS_Player[cp]
		, v.Kill_Score[cp]
		, v.Death_Score[cp]);
	}
	else
	{
		eprintf("　\x17[ \x04{:s}\x17 ]　\x07Exp \x04{}　\x1FCS \x04{}　\x08K\x04/\x1BD \x08{}\x04/\x1B{}"
		, v.Hero_Name[v.Hero_Num[cp]]
		, v.Exp_Player[cp]
		, v.Exp_Player[cp]
		, v.CS_Player[cp]
		, v.Kill_Score[cp]
		, v.Death_Score[cp]);
	}
}

function Announce_Marge(cp)
{
	if (Deaths(CurrentPlayer, Exactly, 1, "Terran SCV"))
	{
		SetDeaths(CurrentPlayer, SetTo, 0, "Terran SCV");
		
		if (v.AnnounceList[cp] < 1) 	{ v.AnnounceList[cp] += 1; }
		else 						{ v.AnnounceList[cp] 	= 0; }
	}
	
	
	switch(v.AnnounceList[cp])
	{
		case 0:
			if (Switch(255, Set))		Announce_Ingame(cp);
			if (Switch(255, Cleared))	Announce_Init();
			break;
		case 1:
			Announce_Character(cp);
			break;
	}
}

