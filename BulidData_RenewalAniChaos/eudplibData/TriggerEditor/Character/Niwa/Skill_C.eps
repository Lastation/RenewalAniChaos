import variable as v;
import func.trig as trg;

function main(playerID)
{
   if (v.P_WaitMain[playerID] == 0)
   {
      if (v.P_CountMain[playerID] == 0)
      {
         if (v.P_LoopMain[playerID] == 0)
         {
            trg.Shape_Edge(playerID, 1, "40 + 1n Wraith", 45, 3, 50);
            KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);
         }
         else if (v.P_LoopMain[playerID] == 2)
         {
            trg.Shape_Edge(playerID, 1, "40 + 1n Wraith", 45, 3, 100);
            KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, "40 + 1n Drone", 45, 3, 100);

            trg.Shape_Edge(playerID, 1, "Target", 45, 3, 50);
            KillUnitAt(All, "Target", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, " Unit. Hoffnung 25000", 45, 3, 50);
            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Drone", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Drone", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] == 4)
         {
            trg.Shape_Edge(playerID, 1, "Kakaru (Twilight)", 45, 3, 100);
            KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, " Unit. Hoffnung 25000", 45, 3, 100);
            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);
         }

         trg.Main_Wait(80);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 12)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;         
         }
      }
      else if (v.P_CountMain[playerID] == 1)
      {
         if (v.P_LoopMain[playerID] < 8)
         {
            RemoveUnitAt(1, "40 + 1n Mojo", "Anywhere", playerID);

            trg.MoveLoc("40 + 1n Drone", playerID, 0, 0);
            RemoveUnitAt(1, "40 + 1n Drone", "Anywhere", playerID);
            trg.SkillUnit(playerID, 1, "40 + 1n Mojo");

            if (v.P_LoopMain[playerID] % 2 == 0)
            {
               trg.SkillUnit(playerID, 1, "60 + 1n Archon");
            }
            else if (v.P_LoopMain[playerID] % 2 == 1)
            {
               trg.SkillUnit(playerID, 1, "Protoss Dark Archon");
            }

            KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);
            KillUnitAt(All, "Protoss Dark Archon", "Anywhere", playerID);


            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            Order("40 + 1n Mojo", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }

         trg.Main_Wait(80);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 8)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;         
         }
      }
      else if (v.P_CountMain[playerID] == 2)
      {
         RemoveUnitAt(1, "40 + 1n Mojo", "Anywhere", playerID);

         trg.SkillEnd();
      }
   }
}