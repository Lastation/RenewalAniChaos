import PluginVariables as msqcvar;
import func.shape as s;

function Shape(playerID, UnitA : TrgUnit, UnitB : TrgUnit, x, y);

function main(playerID)
{
	if (v.P_Delay[playerID] == 0)
	{
		if (v.P_CountMain[playerID] == 0)
		{
			KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);
			
			Shape(playerID, "40 + 1n Wraith", "60 + 1n Archon", 96, 32);
			s.SkillWait(130);
			v.P_CountMain[playerID] += 1;
		}
		else if (v.P_CountMain[playerID] == 1)
		{
			KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);
			
			Shape(playerID, "40 + 1n Wraith", "60 + 1n Archon", 32, 32);
			s.SkillWait(130);
			v.P_CountMain[playerID] += 1;
		}
		else if (v.P_CountMain[playerID] == 2)
		{
			KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);
			
			Shape(playerID, "40 + 1n Wraith", "60 + 1n Archon", -32, 32);
			s.SkillWait(130);
			v.P_CountMain[playerID] += 1;
		}
		else if (v.P_CountMain[playerID] == 3)
		{
			KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);
			
			Shape(playerID, "40 + 1n Wraith", "60 + 1n Archon", -96, 32);
			s.SkillWait(130);
			v.P_CountMain[playerID] += 1;
		}
		else if (v.P_CountMain[playerID] == 4)
		{
			KillUnitAt(All, "40 + 1n Wraith", "Anywhere", playerID);
			
			Shape(playerID, "40 + 1n Mojo", "Protoss Dark Archon", 96, 32);
			Shape(playerID, "40 + 1n Mojo", "Protoss Dark Archon", 32, 32);
			Shape(playerID, "40 + 1n Mojo", "Protoss Dark Archon", -32, 32);
			Shape(playerID, "40 + 1n Mojo", "Protoss Dark Archon", -96, 32);
			s.SkillWait(130);
			v.P_CountMain[playerID] += 1;
		}
		else if (v.P_CountMain[playerID] == 5)
		{
			KillUnitAt(All, "40 + 1n Mojo", "Anywhere", playerID);
			
			s.SkillEnd();
		}
	}
}

function Shape(playerID, UnitA : TrgUnit, UnitB : TrgUnit, x, y)
{
	s.MoveLoc(v.P_CharacterID[playerID], playerID, x, y);
	s.SkillUnit(playerID, 1, UnitA);
	s.SkillUnit(playerID, 1, UnitB);
	s.MoveLoc(v.P_CharacterID[playerID], playerID, -x, -y);
	s.SkillUnit(playerID, 1, UnitA);
	s.SkillUnit(playerID, 1, UnitB);
	KillUnitAt(All, UnitB, "Anywhere", playerID);
	MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
	Order(UnitA, playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
}