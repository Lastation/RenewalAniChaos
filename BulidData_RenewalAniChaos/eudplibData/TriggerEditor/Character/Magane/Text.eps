const looker = PVariable();

function Text(num);
function Looker()
{
	if (looker[getuserplayerid() - 128] > 0)
	{
		Text(looker[getuserplayerid() - 128]);
		looker[getuserplayerid() - 128] = 0;
	}
}

function main(playerID)
{
	if (s.Magane_Voice[playerID] > 0)
	{
		Text(s.Magane_Voice[playerID]);
		looker[playerID] = s.Magane_Voice[playerID];
		s.Magane_Voice[playerID] = 0;
	}
}

