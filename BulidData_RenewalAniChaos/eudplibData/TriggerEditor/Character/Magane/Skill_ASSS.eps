import PluginVariables as msqcvar;
import func.shape as s;

function EdgeShapeAt(cp : TrgPlayer, count, Unit : TrgUnit, degree, n, interval, x, y);

function main(playerID)
{
   ModifyUnitShields(All, v.P_CharacterID[playerID], playerID, "Anywhere", 1);

   if (v.P_Delay[playerID] == 0)
   {
      if (v.P_CountMain[playerID] == 0)
      {
         RemoveUnitAt(All, "40 + 1n Mutalisk", "Anywhere", playerID);

         if (v.P_LoopMain[playerID] % 4 == 0)
         {
            RemoveUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);

            if ((v.P_LoopMain[playerID] % 8) / 4 == 0)
               s.Shape_Square(playerID, 1, "40 + 1n Guardian", 150, 150);
            else
               s.Shape_SquareWithProperty(playerID, 1, "40 + 1n Guardian", 150, 150, 1);

            s.Shape_Square(playerID, 1, "60 + 1n Archon", 150, 150);
            KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Guardian", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] % 4 == 2)
         {
            KillUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);

            s.Shape_Square(playerID, 1, "Kakaru (Twilight)", 150, 150);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 150, 150);
            KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);
            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);
         }

         if (v.P_LoopMain[playerID] < 4)
         {
            s.Shape_Square(playerID, 1, "40 + 1n Mutalisk", 32 - 32 * v.P_LoopMain[playerID], 64);
            s.Shape_Square(playerID, 1, "Rhynadon (Badlands)", 32 - 32 * v.P_LoopMain[playerID], 64);
            KillUnitAt(All, "Rhynadon (Badlands)", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Mutalisk", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] == 4)
         {
            s.Shape_Square(playerID, 1, "40 + 1n Ghost", 96, 96);
            s.Shape_Square(playerID, 1, "Target", 96, 96);
            KillUnitAt(All, "Target", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Ghost", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Ghost", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] == 6)
         {
            s.Shape_Square(playerID, 1, "Target", 32, 32);
            KillUnitAt(All, "Target", "Anywhere", playerID);

            s.Shape_Square(playerID, 1, "60 + 1n Siege", 96, 96);
            s.Shape_Square(playerID, 1, "40 + 1n Gantrithor", 96, 96);
            KillUnitAt(All, "40 + 1n Gantrithor", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Ghost", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Ghost", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }

         s.SkillWait(80);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 8)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;
         }
      }
      else if (v.P_CountMain[playerID] == 1)
      {
         RemoveUnitAt(All, "40 + 1n Mutalisk", "Anywhere", playerID);

         if (v.P_LoopMain[playerID] % 4 == 0)
         {
            RemoveUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);

            if ((v.P_LoopMain[playerID] % 8) / 4 == 0)
               s.Shape_Square(playerID, 1, "40 + 1n Guardian", 150, 150);
            else
               s.Shape_SquareWithProperty(playerID, 1, "40 + 1n Guardian", 150, 150, 1);

            s.Shape_Square(playerID, 1, "60 + 1n Archon", 150, 150);
            KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Guardian", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] % 4 == 2)
         {
            KillUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);

            s.Shape_Square(playerID, 1, "Kakaru (Twilight)", 150, 150);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 150, 150);
            KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);
            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);
         }

         if (v.P_LoopMain[playerID] < 4)
         {
            s.Shape_Square(playerID, 1, "40 + 1n Mutalisk", 16 + 16 * v.P_LoopMain[playerID], 64 - 16 * v.P_LoopMain[playerID]);
            s.Shape_Square(playerID, 1, "Rhynadon (Badlands)", 16 + 16 * v.P_LoopMain[playerID], 64 - 16 * v.P_LoopMain[playerID]);
            KillUnitAt(All, "Rhynadon (Badlands)", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Mutalisk", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] == 4)
         {
            s.Shape_Square(playerID, 1, "40 + 1n Ghost", 128, 0);
            s.Shape_Square(playerID, 1, "Target", 128, 0);
            KillUnitAt(All, "Target", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Ghost", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Ghost", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] == 6)
         {
            s.Shape_Square(playerID, 1, "Target", 40, 0);
            KillUnitAt(All, "Target", "Anywhere", playerID);

            s.Shape_Square(playerID, 1, "60 + 1n Siege", 128, 0);
            s.Shape_Square(playerID, 1, "40 + 1n Gantrithor", 128, 0);
            KillUnitAt(All, "40 + 1n Gantrithor", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Ghost", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Ghost", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }

         s.SkillWait(80);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 8)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;
         }
      }
      else if (v.P_CountMain[playerID] == 2)
      {
         if (v.P_LoopMain[playerID] % 2 == 0)
         {
            SetDeaths(playerID, SetTo, 1, " `ShieldRecharge");

            RemoveUnitAt(All, "40 + 1n Mutalisk", "Anywhere", playerID);

            if ((v.P_LoopMain[playerID] % 4) / 2 == 0)
               s.EdgeShape(playerID, 1, "40 + 1n Mutalisk", 45, 3, 50);
            else
               s.EdgeShapeWithProperty(playerID, 1, "40 + 1n Mutalisk", 45, 3, 50, 1);

            s.EdgeShape(playerID, 1, "Rhynadon (Badlands)", 45, 3, 50);
            KillUnitAt(All, "Rhynadon (Badlands)", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Mutalisk", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);

            s.Shape_Square(playerID, 1, "Scantid (Desert)", 100, 100);
            KillUnitAt(All, "Scantid (Desert)", "Anywhere", playerID);

            if ((v.P_LoopMain[playerID] % 4) / 2 == 0)
            {
               s.Shape_Square(playerID, 1, "60 + 1n Archon", 50 - 50 * (v.P_LoopMain[playerID] % 2), 50 * (v.P_LoopMain[playerID] % 2));
               s.Shape_Square(playerID, 1, "Kakaru (Twilight)", 50 - 50 * (v.P_LoopMain[playerID] % 2), 50 * (v.P_LoopMain[playerID] % 2));
               KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);
               KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);
            }
            else if ((v.P_LoopMain[playerID] % 4) / 2 == 1)
            {
               s.Shape_Square(playerID, 1, "60 + 1n Archon", 0 - 50 * (v.P_LoopMain[playerID] % 2), 50 * (v.P_LoopMain[playerID] % 2));
               s.Shape_Square(playerID, 1, "Kakaru (Twilight)", 0 - 50 * (v.P_LoopMain[playerID] % 2), 50 * (v.P_LoopMain[playerID] % 2));
               KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);
               KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);

            }
         }

         if (v.P_LoopMain[playerID] % 4 == 0)
         {
            RemoveUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);

            if ((v.P_LoopMain[playerID] % 8) / 4 == 0)
               s.Shape_Square(playerID, 1, "40 + 1n Guardian", 150, 150);
            else
               s.Shape_SquareWithProperty(playerID, 1, "40 + 1n Guardian", 150, 150, 1);

            s.Shape_Square(playerID, 1, "60 + 1n Archon", 150, 150);
            KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Guardian", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }
         else if (v.P_LoopMain[playerID] % 4 == 2)
         {
            KillUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);

            s.Shape_Square(playerID, 1, "Kakaru (Twilight)", 150, 150);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 150, 150);
            KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);
            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);
         }

         s.SkillWait(80);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 11)
         {
            KillUnitAt(All, "40 + 1n Ghost", "Anywhere", playerID);

            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;
         }
      }
      else if (v.P_CountMain[playerID] == 3)
      {
         var i = 0;
         var x = 0;
         var y = 0;

         if (v.P_LoopMain[playerID] < 4)
         {
            i = v.P_LoopMain[playerID];

            x = 120 - 40 * i;
            y = 40 + 40 * i;
         }
         else if (v.P_LoopMain[playerID] == 4)
         {
            x = 80;
            y = 0;
         }
         else if (v.P_LoopMain[playerID] == 5)
         {
            x = 80;
            y = 80;
         }
         else if (v.P_LoopMain[playerID] == 6 || v.P_LoopMain[playerID] == 7)
         {
            x = 150;
            y = 150;
         }

         if (v.P_LoopMain[playerID] < 8)
         {
            RemoveUnitAt(All, "40 + 1n Mutalisk", "Anywhere", playerID);

            s.Shape_Square(playerID, 1, "80 + 1n Guardian", x, y);
            EdgeShapeAt(playerID, 1, "Bengalaas (Jungle)", 0, 2, 25, x, y);

            KillUnitAt(All, "80 + 1n Guardian", "Anywhere", playerID);
            KillUnitAt(All, "Bengalaas (Jungle)", "Anywhere", playerID);
         }


         if (v.P_LoopMain[playerID] == 8)
         {
            s.Shape_Square(playerID, 1, "40 + 1n Guardian", 160, 0);
            s.Shape_Square(playerID, 1, "40 + 1n Guardian", 120, 40);
            s.Shape_Square(playerID, 1, "40 + 1n Guardian", 80, 80);
            s.Shape_Square(playerID, 1, "40 + 1n Guardian", 40, 120);
            s.Shape_Square(playerID, 1, "40 + 1n Guardian", 80, 0);

            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 160, 0);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 120, 40);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 80, 80);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 40, 120);
            s.Shape_Square(playerID, 1, " Unit. Hoffnung 25000", 80, 0);

            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Guardian", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }

         if (v.P_LoopMain[playerID] == 12)
         {
            s.Shape_SquareAt(playerID, 1, "40 + 1n Guardian", 25, 25, 150, 150);
            s.Shape_SquareAt(playerID, 1, "40 + 1n Guardian", 25, 25, -150, -150);
            s.Shape_SquareAt(playerID, 1, "40 + 1n Guardian", 25, 25, -150, 150);
            s.Shape_SquareAt(playerID, 1, "40 + 1n Guardian", 25, 25, 150, -150);

            s.Shape_SquareAt(playerID, 1, " Unit. Hoffnung 25000", 25, 25, 150, 150);
            s.Shape_SquareAt(playerID, 1, " Unit. Hoffnung 25000", 25, 25, -150, -150);
            s.Shape_SquareAt(playerID, 1, " Unit. Hoffnung 25000", 25, 25, -150, 150);
            s.Shape_SquareAt(playerID, 1, " Unit. Hoffnung 25000", 25, 25, 150, -150);
            KillUnitAt(All, " Unit. Hoffnung 25000", "Anywhere", playerID);

            MoveLocation(v.P_LocationID[playerID], v.P_CharacterID[playerID], playerID, "Anywhere");
            Order("40 + 1n Guardian", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
         }


         s.SkillWait(80);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 16)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;         
         }
      }
      else if (v.P_CountMain[playerID] == 4)
      {
         SetDeaths(playerID, SetTo, 0, " `ShieldRecharge");

         KillUnitAt(All, "40 + 1n Guardian", "Anywhere", playerID);
         KillUnitAt(All, "60 + 1n Siege", "Anywhere", playerID);
         KillUnitAt(All, "40 + 1n Ghost", "Anywhere", playerID);

         s.SkillEnd();
      }
   }
}

function EdgeShapeAt(cp : TrgPlayer, count, Unit : TrgUnit, degree, n, interval, x, y)
{
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, x, y);
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, -x, -y);
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, -y, x);
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, y, -x);
}