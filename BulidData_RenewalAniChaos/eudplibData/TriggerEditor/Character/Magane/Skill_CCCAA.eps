function EdgeShapeAt(cp : TrgPlayer, count, Unit : TrgUnit, degree, n, interval, x, y)
{
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, x, y);
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, -x, -y);
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, -y, x);
   s.EdgeShapeAt(playerID, count, Unit, degree, n, interval, y, -x);
}

function EdgeShapeAtWithProperty(cp : TrgPlayer, count, Unit : TrgUnit, degree, n, interval, x, y, property)
{
   s.EdgeShapeAtWithProperty(playerID, count, Unit, degree, n, interval, x, y, property);
   s.EdgeShapeAtWithProperty(playerID, count, Unit, degree, n, interval, -x, -y, property);
   s.EdgeShapeAtWithProperty(playerID, count, Unit, degree, n, interval, -y, x, property);
   s.EdgeShapeAtWithProperty(playerID, count, Unit, degree, n, interval, y, -x, property);
}

function Shape_NxNSquareAt(cp : TrgPlayer, count, Unit : TrgUnit, n, interval, x, y)
{
   s.Shape_NxNSquareAt(playerID, count, Unit, n, interval, x, y);
   s.Shape_NxNSquareAt(playerID, count, Unit, n, interval, -x, -y);
   s.Shape_NxNSquareAt(playerID, count, Unit, n, interval, -y, x);
   s.Shape_NxNSquareAt(playerID, count, Unit, n, interval, y, -x);
}
