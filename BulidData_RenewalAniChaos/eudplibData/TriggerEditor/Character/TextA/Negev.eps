import PluginVariables as msqcvar;
import Variable as v;
import func.shape as s;

function NormalText(playerID)
{
	switch (v.Sound_Text1[playerID])
	{
	case 6000:
		PlayWAV("Negev_01.ogg");
		s.stb.print("\n\x13\x06Negev\n\x13\x04「　사라져　」\n");
		v.Sound_Text1[playerID] = 0;
		break;
	case 6001:
		PlayWAV("Negev_02.ogg");
		s.stb.print("\n\x13\x06Negev\n\x13\x04「　\x06벌레\x04같은 녀석들이...　\x04」\n");
		v.Sound_Text1[playerID] = 0;
		break;
	case 6002:
		s.stb.print("\n\x13\x06Negev\n\x13\x04「　\x06죽어!　\x04」\n");
		v.Sound_Text1[playerID] = 0;
		break;
	case 6100:
		PlayWAV("Negev_03.ogg");
		s.stb.print("\n\x13\x06Negev\n\x13\x04「　\x06벌레\x04는 용서하지 않아, 최고의 얼굴로 \x06죽여주도록 할까　\x04」\n");
		v.Sound_Text1[playerID] = 0;
		break;
	}
}

function UiltimateText(playerID)
