import variable as v;
import func.trig as trg;

function main(playerID)
{
   if (v.P_WaitMain[playerID] == 0)
   {
      if (v.P_CountMain[playerID] == 0)
      {
         
         KillUnitAt(All, "40 + 1n Goliath", "Anywhere", playerID);
         KillUnitAt(All, "Protoss Dark Archon", "Anywhere", playerID);

         if (v.P_LoopMain[playerID] < 5)
         {
            trg.Shape_Double(playerID, 1, "Protoss Dark Archon", -100, 100 - 50 * v.P_LoopMain[playerID]);            
            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            trg.Shape_Double(playerID, 1, "40 + 1n Goliath", 100 - 50 * v.P_LoopMain[playerID], 100);            
            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            Order("40 + 1n Goliath", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);         
         }
         if (v.P_LoopMain[playerID] == 5)
         {
            trg.Shape_Double(playerID, 1, "Protoss Dark Archon", -50, 100);    
            trg.Shape_Double(playerID, 1, "40 + 1n Goliath", -100, 50);            
            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            Order("40 + 1n Goliath", playerID, "Anywhere", Attack, v.P_LocationID[playerID]); 
         }
         if (v.P_LoopMain[playerID] == 6)
         {
            trg.Shape_Double(playerID, 1, "Protoss Dark Archon", 0, -100); 
            trg.Shape_Double(playerID, 1, "40 + 1n Goliath", -100, 0);            
            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            Order("40 + 1n Goliath", playerID, "Anywhere", Attack, v.P_LocationID[playerID]); 
         }
         if (v.P_LoopMain[playerID] == 7)
         {
            trg.Shape_Edge(playerID, 1, "Protoss Dark Archon", 45,3, 50); 
            trg.Shape_Edge(playerID, 1, "40 + 1n Goliath", 45,3, 50);            
            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            Order("40 + 1n Goliath", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);       
         }
          trg.Main_Wait(80);

          v.P_LoopMain[playerID] += 1;

          if (v.P_LoopMain[playerID] == 8)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0; 
         }
      }
       
      else if (v.P_CountMain[playerID] == 1)
      {
          KillUnitAt(All, "40 + 1n Goliath", "Anywhere", playerID);
          KillUnitAt(All, "Protoss Dark Archon", "Anywhere", playerID);

         trg.SkillEnd();
      }
   }
}