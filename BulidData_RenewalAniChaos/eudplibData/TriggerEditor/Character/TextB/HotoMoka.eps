import PluginVariables as msqcvar;
import Variable as v;
import func.shape as s;

function NormalText(playerID)
{
	switch (v.Sound_Text2[playerID])
	{
	case 3110:
		PlayWAV("HotoMoka_01.ogg");
		s.stb.print("\n\n\x13\x1BHoto Moka\n\x13\x04어서오세욧~\n\n");
		v.Sound_Text2[playerID] = 0;
		break;
	case 3210:
		PlayWAV("HotoMoka_02.ogg");
		s.stb.print("\n\n\x13\x1BHoto Moka\n\x13\x04코코아가 젤 첨에 되고 싶었던거 기억나?\n\n");
		v.Sound_Text2[playerID] = 0;
		break;
	case 3220:
		PlayWAV("HotoMoka_03.ogg");
		v.Sound_Text2[playerID] = 0;
		break;
	case 3221:
		s.stb.print("\n\n\x13\x1BHoto Moka\n\x13\x04마법사!\n\n");
		v.Sound_Text2[playerID] = 0;
		break;
	}
}

