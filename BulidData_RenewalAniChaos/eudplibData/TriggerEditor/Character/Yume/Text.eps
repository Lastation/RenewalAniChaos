import PluginVariables as msqcvar;
import func.shape as s;

const looker = PVariable();

function Text(num);
function Looker()
{
	if (looker[getuserplayerid() - 128] > 0)
	{
		Text(looker[getuserplayerid() - 128]);
		looker[getuserplayerid() - 128] = 0;
	}
}

function main(playerID)
{
	if (s.Yume_Voice[playerID] > 0)
	{
		Text(s.Yume_Voice[playerID]);
		looker[playerID] = s.Yume_Voice[playerID];
		s.Yume_Voice[playerID] = 0;
	}
}

