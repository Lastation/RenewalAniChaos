import variable_data as vd;
import variable_weapon as vw;
import variable_title as vt;
import getunitID as id;
import Player.unit_title as ut;

function Set_Info();
function Set_Unit_Info(ID, index);
function Set_Weapon_Info(ID, index);
function Set_Name_Info(type, ID, index);
function Set_Title_Info(type, ID, index);

function Weapon_Text_Princess();
function Weapon_Text_Fairy();
function Weapon_Text_Angel();

function Set_Info()
{
	for (var i = 0; i < 17; i++)
	{
		// Unit.dat
		Set_Unit_Info(vd.Princess_Unit_Index[i], i);
		Set_Unit_Info(vd.Fairy_Unit_Index[i], i);
		Set_Unit_Info(vd.Angel_Unit_Index[i], i);
		
		Set_Title_Info(0, vd.Princess_Unit_Index[i], i);
		Set_Title_Info(1, vd.Fairy_Unit_Index[i], i);
		Set_Title_Info(2, vd.Angel_Unit_Index[i], i);
		
		// Title Name
		ut.Title_Value(vd.Princess_Unit_Index[i], 0);
		ut.Title_Value(vd.Fairy_Unit_Index[i], 0);
		ut.Title_Value(vd.Angel_Unit_Index[i], 0);
		
		// Weapon.dat
		Set_Weapon_Info(vd.Princess_Weapon_Index[i], i);
		Set_Weapon_Info(vd.Fairy_Weapon_Index[i], i);
		Set_Weapon_Info(vd.Angel_Weapon_Index[i], i);
		
		Set_Name_Info(0, vd.Princess_Weapon_Index[i], i);
		Set_Name_Info(1, vd.Fairy_Weapon_Index[i], i);
		Set_Name_Info(2, vd.Angel_Weapon_Index[i], i);
	}
}

function Set_Unit_Info(ID, index)
{
	bwrite(0x65FD00 + 12472 + ID * 1, vd.Base_Unit_Sight[index]);				// 인지거리
	bwrite(0x65FD00 + 13624 + ID * 1, vd.Base_Unit_Sight[index]);				// 시야
}

function Set_Weapon_Info(ID, index)
{
	// 기본 데미지 설정	
	wwrite(0x6564E0 + 2512 + ID * 2, vd.Base_Weapon_Damage[index]);		// 기본 데미지
	wwrite(0x6564E0 + 4504 + ID * 2, vd.Base_Weapon_Increase[index]);		// 업글 증가량
	bwrite(0x6564E0 + 2776 + ID * 1, vd.Base_Weapon_Speed[index]);			// 공격 속도
	bwrite(0x6564E0 + 3984 + ID * 4, vd.Base_Weapon_Range[index]);			// 사거리	
	
	if (vd.Base_Weapon_Splash[index] != 0)									// 스플레시
	{
		bwrite(0x6564E0 + 536 + ID * 1, 3);									// 스플레시 - O
		wwrite(0x6564E0 + 936 + ID * 2, vd.Base_Weapon_Splash[index]);		// 스플레시 100% 범위
	}
	else
	{
		bwrite(0x6564E0 + 536 + ID * 1, 1);									// 스플레시 - X
	}
}

function Set_Title_Info(type, ID, index)
{	
	switch(type)
	{
	case 0:
		bwrite(0x65FD00 + 16592 + ID * 1, vd.Princess_Unit_Title[index]);
		break;
	case 1:
		bwrite(0x65FD00 + 16592 + ID * 1, vd.Fairy_Unit_Title[index]);
		break;
	case 2:
		bwrite(0x65FD00 + 16592 + ID * 1, vd.Angel_Unit_Title[index]);
		break;
	}
}

function Set_Name_Info(type, ID, index)
{
	switch(type)
	{
	case 0:
		wwrite(0x6564E0 + 3584 + ID * 2, vd.Princess_Weapon_Name[index]);
		break;
	case 1:
		wwrite(0x6564E0 + 3584 + ID * 2, vd.Fairy_Weapon_Name[index]);
		break;
	case 2:
		wwrite(0x6564E0 + 3584 + ID * 2, vd.Angel_Weapon_Name[index]);
		break;
	}
}