import Princess.Variable as v;
import Princess.Effect as e;
import Princess.Main as m;

function Init_ButtonText();
function Update_ButtomText();

function Set_Dear_ButtonText(id);
function Set_Album_ButtonText(id);

function Add_DearNow(id, value);
function Add_AlbumNow(id, value);

function Set_DearLevel(id);
function Set_AlbumLevel(id);

function Init_ButtonText()
{
	for (var i = 0; i < 13; i++)
	{
		Set_Dear_ButtonText(i);
		Set_Album_ButtonText(i);
	}
}

function Update_ButtomText()
{
	for (var i = 0; i < 13; i++)
	{
		Add_DearNow(i, 100);
		Add_AlbumNow(i, 1);
	}
}

function Set_Dear_ButtonText(id)
{
	if (v.Dear_Level[id] < 10)
	{
		settbl(1100 + id * 2, 10, v.Dear_Now[id], "/", v.Dear_Need[v.Dear_Level[id]],
		"\n\x1B", ptr2s(v.Dear_Text[id])," Lv.", v.Dear_Level[id],
		"\n\x04", ptr2s(v.Dear_SubText[v.Dear_Ablity[id]]), " \x08", v.Dear_Level[id] * v.Dear_Multiply[id], ptr2s(v.Dear_EndText[v.Dear_Ablity[id]]));
	}
	else
	{
		settbl(1100 + id * 2, 10, v.Dear_Now[id],
		"\n\x1B", ptr2s(v.Dear_Text[id])," Lv. Max",
		"\n\x04", ptr2s(v.Dear_SubText[v.Dear_Ablity[id]]), " \x08", v.Dear_Level[id] * v.Dear_Multiply[id], ptr2s(v.Dear_EndText[v.Dear_Ablity[id]]));
	}
}

function Set_Album_ButtonText(id)
{
	if (v.Album_Level[id] < 10)
	{
		if (id != 6)
		{
			settbl(1101 + id * 2, 8, v.Album_Now[id], "/", v.Album_Need[v.Album_Level[id]],
			"\n\x1B", ptr2s(v.Album_Text[id])," Lv.", v.Album_Level[id],
			"\n\x04", ptr2s(v.Album_SubText[id]), " \x08", v.Album_Level[id] * v.Album_Multiply[id], ptr2s(v.Album_EndText[v.Album_Ablity[id]]));
		}
		else
		{
			settbl(1101 + id * 2, 8, v.Album_Now[id], "/", v.Album_Need[v.Album_Level[id]],
			"\n\x1B", ptr2s(v.Album_Text[id])," Lv.", v.Album_Level[id],
			"\n\x08", v.Album_Multiply[id] -  v.Album_Level[id], ptr2s(v.Album_EndText[v.Album_Ablity[id]]));
		}
	}
	else
	{
		if (id != 6)
		{
			settbl(1101 + id * 2, 8, v.Album_Now[id],
			"\n\x1B", ptr2s(v.Album_Text[id])," Lv. Max",
			"\n\x04", ptr2s(v.Album_SubText[id]), " \x08", v.Album_Level[id] * v.Album_Multiply[id], ptr2s(v.Album_EndText[v.Album_Ablity[id]]));
		}
		else
		{
			settbl(1101 + id * 2, 8, v.Album_Now[id],
			"\n\x1B", ptr2s(v.Album_Text[id])," Lv. Max",
			"\n\x08", v.Album_Multiply[id] -  v.Album_Level[id], ptr2s(v.Album_EndText[v.Album_Ablity[id]]));
		}
	}
}

function Add_DearNow(id, value)
{
	v.Dear_Now[id] += value;
	Set_DearLevel(id);
}

function Add_AlbumNow(id, value)
{
	v.Album_Now[id] += value;
	Set_AlbumLevel(id);
}

function Set_DearLevel(id)
{
	if (v.Dear_Now[id] >= v.Dear_Need[v.Dear_Level[id]] && v.Dear_Level[id] < 10)
	{ 
		v.Dear_Level[id] += 1;
		Set_Dear_ButtonText(id);
		e.Effect_Dear(id);
	}
	else
	{ Set_Dear_ButtonText(id); }
}

function Set_AlbumLevel(id)
{
	var value;
	
	if (v.Album_Now[id] >= v.Album_Need[v.Album_Level[id]] && v.Album_Level[id] < 10)
	{ 
		v.Album_Level[id] += 1;
		Set_Album_ButtonText(id);
		switch(v.Album_Ablity[id])
		{
		case 1:
			value = ((v.Album_Multiply[1] * v.Album_Level[1] + v.Album_Multiply[4] * v.Album_Level[4]) * 256 + 256) / 100 + v.Base_AtkPercent[0];
			m.Set_AtkPercent(0, value);
			m.Update_PercentText();
			break;
		case 5:
			value = ((v.Album_Multiply[5] * v.Album_Level[5] + v.Album_Multiply[4] * v.Album_Level[4]) * 256 + 256) / 100 + v.Base_AtkPercent[1];
			m.Set_AtkPercent(1, value);
			m.Update_PercentText();
			break;
		case 9:
			value = ((v.Album_Multiply[9] * v.Album_Level[9] + v.Album_Multiply[4] * v.Album_Level[4]) * 256 + 256) / 100 + v.Base_AtkPercent[2];
			m.Set_AtkPercent(2, value);
			m.Update_PercentText();
			break;
		case 4:
			value = ((v.Album_Multiply[1] * v.Album_Level[1] + v.Album_Multiply[4] * v.Album_Level[4]) * 256 + 256) / 100 + v.Base_AtkPercent[0];
			m.Set_AtkPercent(0, value);
			value = ((v.Album_Multiply[5] * v.Album_Level[5] + v.Album_Multiply[4] * v.Album_Level[4]) * 256 + 256) / 100 + v.Base_AtkPercent[1];
			m.Set_AtkPercent(1, value);
			value = ((v.Album_Multiply[9] * v.Album_Level[9] + v.Album_Multiply[4] * v.Album_Level[4]) * 256 + 256) / 100 + v.Base_AtkPercent[2];
			m.Set_AtkPercent(2, value);
			m.Update_PercentText();
			break;
		}
	}
	else
	{ Set_Album_ButtonText(id); }
}