function BGMRoutine(cp)
{
	if (Bring(cp, AtLeast, 1, "Terran SCV", "[BGM]ON"))
	{
		if (bgmWait[cp] == 0)
		{
			f.stb.print("　　\x04\x1F# N\x04ow \x04Playing... ' \x08化\x02身の\x04獣 [ \x19십\x04이대전 ed ]\x04");
			PlayWAV("BGM.ogg");
			bgmWait[cp] = 2424;
		}
	}
	
	if (bgmWait[cp] > 0)
	{
		bgmWait[cp] -= 1;
	}
}

function SkillWait(cp)
{
	if (f.delay[cp] == 0)
	{
		if (f.count[cp] == 999)
		{
			f.SkillWait(cp, 500);
			f.count[cp] = 1000;
		}
		else if (f.count[cp] == 1000)
		{
			f.count[cp] = 0;
			f.loop[cp] = 0;
			f.wait[cp] = 12;
		}
	}
	
	if (f.wait[cp] >= 2)
	{
		f.wait[cp] -= 1;
	}
	else if (f.wait[cp] == 1)
	{
		f.wait[cp] = 0;
		f.step[cp] = 0;
	}
}

function SkillDelay(cp)
{
	if (f.delay[cp] >= 1) { f.delay[cp] -= 1; }
	if (f.delayB[cp] >= 1) { f.delayB[cp] -= 1; }
	if (f.delayC[cp] >= 1) { f.delayC[cp] -= 1; }
}