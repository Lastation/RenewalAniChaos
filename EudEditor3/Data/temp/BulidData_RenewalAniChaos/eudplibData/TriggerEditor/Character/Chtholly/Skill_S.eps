import PluginVariables as msqcvar;
import Function as f;

function Shape(cp, UnitA : TrgUnit, UnitB : TrgUnit, x, y);

function main(cp)
{
	if (f.delay[cp] == 0)
	{
		if (f.count[cp] == 0)
		{
			Shape(cp, "40 + 1n Mojo", "Scantid", 32, 32);
			f.SkillWait(cp, 50);
			f.count[cp] += 1;
		}
		else if (f.count[cp] == 1)
		{
			KillUnitAt(All, "40 + 1n Mojo", "Anywhere", cp);
			Shape(cp, "40 + 1n Marine", "40 + 1n Mojo", 32, -32);
			f.SkillWait(cp, 50);
			f.count[cp] += 1;
		}
		else if (f.count[cp] == 2)
		{
			KillUnitAt(All, "40 + 1n Marine", "Anywhere", cp);
			
			f.SquareShape(cp, 1, "40 + 1n Mojo", 32, 32);
			f.SquareShape(cp, 1, "Scantid", 32, 32);
			KillUnitAt(All, "Scantid", "Anywhere", cp);
			MoveLocation(f.location[cp], f.heroID[cp], cp, "Anywhere");
			Order("40 + 1n Mojo", cp, "Anywhere", Attack, f.location[cp]);
			f.SkillWait(cp, 50);
			f.count[cp] += 1;
		}
		else if (f.count[cp] == 3)
		{
			KillUnitAt(All, "40 + 1n Mojo", "Anywhere", cp);
			
			f.SquareShape(cp, 1, "40 + 1n Marine", 32, 32);
			f.SquareShape(cp, 1, "Scantid", 32, 32);
			KillUnitAt(All, "Scantid", "Anywhere", cp);
			MoveLocation(f.location[cp], f.heroID[cp], cp, "Anywhere");
			Order("40 + 1n Marine", cp, "Anywhere", Attack, f.location[cp]);
			f.SkillWait(cp, 220);
			f.count[cp] += 1;
		}
		else if (f.count[cp] == 4)
		{
			KillUnitAt(All, "40 + 1n Marine", "Anywhere", cp);
			
			f.SquareShape(cp, 1, "40 + 1n Goliath", 32, 32);
			f.SquareShape(cp, 1, "Kakaru", 32, 32);
			KillUnitAt(All, "Kakaru", "Anywhere", cp);
			MoveLocation(f.location[cp], f.heroID[cp], cp, "Anywhere");
			Order("40 + 1n Goliath", cp, "Anywhere", Attack, f.location[cp]);
			f.SkillWait(cp, 100);
			f.count[cp] += 1;
		}
		else if (f.count[cp] == 5)
		{
			KillUnitAt(All, "40 + 1n Goliath", "Anywhere", cp);
			Shape(cp, "40 + 1n Goliath", "Kakaru", 32, -32);
			
			f.SkillWait(cp, 100);
			f.count[cp] += 1;
		}
		else if (f.count[cp] == 6)
		{
			KillUnitAt(All, "40 + 1n Goliath", "Anywhere", cp);
			f.SkillEnd(cp);
		}
	}
}

function Shape(cp, UnitA : TrgUnit, UnitB : TrgUnit, x, y)
{
	f.MoveLoc(f.heroID[cp], cp, x, y);
	f.SkillUnit(cp, 1, UnitA);
	f.SkillUnit(cp, 1, UnitB);
	f.MoveLoc(f.heroID[cp], cp, -y, x);
	f.SkillUnit(cp, 1, UnitB);
	f.MoveLoc(f.heroID[cp], cp, -x, -y);
	f.SkillUnit(cp, 1, UnitA);
	f.SkillUnit(cp, 1, UnitB);
	f.MoveLoc(f.heroID[cp], cp, y, -x);
	f.SkillUnit(cp, 1, UnitB);
	KillUnitAt(All, UnitB, "Anywhere", cp);
	MoveLocation(f.location[cp], f.heroID[cp], cp, "Anywhere");
	Order(UnitA, cp, "Anywhere", Attack, f.location[cp]);
}