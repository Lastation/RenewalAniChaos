import Variable as v;

const s = StringBuffer();

function NormalText(cp)
{
	switch (v.Sound_Text1[cp])
	{
	case 6000:
		PlayWAV("Negev_01.ogg");
		v.Sound_Text1[cp] = 0;
		s.print("\n\x13\x06Negev\n\x13\x04「　사라져　」\n");
		break;
	case 6001:
		PlayWAV("Negev_02.ogg");
		v.Sound_Text1[cp] = 0;
		s.print("\n\x13\x06Negev\n\x13\x04「　\x06벌레\x04같은 녀석들이...　\x04」\n");
		break;
	case 6002:
		v.Sound_Text1[cp] = 0;
		s.print("\n\x13\x06Negev\n\x13\x04「　\x06죽어!　\x04」\n");
		break;
	case 6100:
		PlayWAV("Negev_03.ogg");
		v.Sound_Text1[cp] = 0;
		s.print("\n\x13\x06Negev\n\x13\x04「　\x06벌레\x04는 용서하지 않아, 최고의 얼굴로 \x06죽여주도록 할까　\x04」\n");
		break;
	}
}

