function EndTotalText(cp)
{
	const Exp 	= dwread_epd(EPD(0x58A364 + 48 * 166 + 4 * cp));
	
	tct.makeText("\n\x13\x17[ \x04",ptr2s(v.Hero_Name[v.Hero_Num[cp]])," \x17]");
	tct.addText("\n\n\x13\x04얻은 경험치 : ", Exp, "　\x19[ Total ", v.Exp_Group[20 * cp + (v.Hero_Num[cp] - 1)], " ]");
	tct.addText("\n\x13\x04잡은 크립 : ",  v.CS_Group[20 * cp + (v.Hero_Num[cp] - 1)], "　\x19[ Total ", v.CS_Total[cp]," ]");
	tct.addText("\n\x13\x04Kill : \x08",  v.Kill_Score[cp],"　\x19[ Total ", v.Kill_Total[20 * cp + (v.Hero_Num[cp] - 1)]," ]");
	tct.addText("\n\x13\x04Death : \x08",  v.Death_Score[cp], "　\x19[ Total ", v.Death_Total[20 * cp + (v.Hero_Num[cp] - 1)]," ]");
	
	if (sca.ConnectStatus() == 1)
	{
		switch(sca.GetLastMessage())
		{
			case 5:
				tct.addText("\n\n\x13\x1F저장 중\x04입니다.");
				break;
			case 6:
				tct.addText("\n\n\x13\x1F저장 완료\x04되었습니다. 수고하셨습니다.");
				break;
	 	}
 	}
 	else if (sca.ConnectStatus() == 0)
 	{
 		tct.addText("\n\n\x13\x08SCA\x04 런쳐가 꺼져있어 저장이 불가능합니다.");
 	}
 	else if (Switch("TestModeSwitch", Set))
 	{
 		tct.addText("\n\n\x13\x08TEST\x04 모드에서는 저장이 불가능합니다.");
 	}
 	
	txtPtr = dwread_epd(EPD(0x640B58));
	tct.displayText();
	SetMemory(0x640B58, SetTo, txtPtr);
}
		