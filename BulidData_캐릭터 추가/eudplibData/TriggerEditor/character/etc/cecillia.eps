import PluginVariables as msqcvar;
import variable as v;
import func.trig as trg;
import func.sound as s;

const P_player		= PVariable();
const P_observer 	= PVariable();
const P_type 		= PVariable();

function Text1(num);
function Text2(num);
function Text3(num);

function player(playerID)
{
	if (P_type[playerID] == 1) { Text1(P_player[playerID]); }
	if (P_type[playerID] == 2) { Text2(P_player[playerID]); }
	if (P_type[playerID] == 3) { Text3(P_player[playerID]); }
	P_player[playerID] = 0;
}

function observer(playerID)
{
	if (P_type[playerID] == 1) { Text1(P_observer[playerID - 128]); }
	if (P_type[playerID] == 2) { Text2(P_observer[playerID - 128]); }
	if (P_type[playerID] == 3) { Text3(P_observer[playerID - 128]); }
	P_observer[playerID - 128] = 0;
}

function main(playerID)
{
	if (playerID < 6) 	{ player(playerID); 	}
	else  			{ observer(playerID); }
}




