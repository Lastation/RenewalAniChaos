import PluginVariables as msqcvar;
import variable as v;
import character.group1.rusaruka.text as rusaruka;
import character.group1.chtholly.text as chtholly;
import character.group1.maihime.text as maihime;

function CharacterVoice(count : TrgCount)
{
	var playerID = getcurpl();
	
	foreach(idx : EUDLoopRange(6))
	{
		if 		(v.P_HeroID[playerID] == 1)	{ rusaruka.	P_player[idx] = count; rusaruka.	P_observer[idx] = count; }
		else if 	(v.P_HeroID[playerID] == 2)	{ chtholly.	P_player[idx] = count; chtholly.	P_observer[idx] = count; 	}
		else if 	(v.P_HeroID[playerID] == 3)	{ maihime.	P_player[idx] = count; maihime.	P_observer[idx] = count; 	}
	}
}

function main(playerID)
{
	rusaruka.main(playerID);
	chtholly.main(playerID);
	maihime.main(playerID);
}