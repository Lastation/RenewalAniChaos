import PluginVariables as msqcvar;
import variable as v;
import func.trig as trg;

var x =0;
function main(playerID)
{
	if (v.P_WaitMain[playerID] == 0)
	{
		if (v.P_CountMain[playerID] == 0)
		{
			KillUnitAt(All,"40 + 1n Guardian" , "Anywhere", playerID);
			KillUnitAt(All,"40 + 1n Goliath" , "Anywhere", playerID);
			KillUnitAt(All,"40 + 1n Mutalisk" , "Anywhere", playerID);
			if (v.P_LoopMain[playerID] == 0)
			{
				trg.Shape_Square(playerID,1,"40 + 1n Mutalisk",64,0);
				trg.Shape_Square(playerID,1,"40 + 1n Goliath",64,0);
				trg.MoveLoc(v.P_UnitID[playerID],playerID,0,0);
				Order("40 + 1n Mutalisk",playerID,"Anywhere",Attack,v.P_LocationID[playerID]);
				Order("40 + 1n Goliath",playerID,"Anywhere",Attack,v.P_LocationID[playerID]);
				trg.Main_Wait(200);
			}
			if (v.P_LoopMain[playerID] == 1)
			{
				trg.Shape_Square(playerID,1,"40 + 1n Mutalisk",64,64);
				trg.Shape_Square(playerID,1,"40 + 1n Goliath",64,64);
				trg.MoveLoc(v.P_UnitID[playerID],playerID,0,0);
				Order("40 + 1n Mutalisk",playerID,"Anywhere",Attack,v.P_LocationID[playerID]);
				Order("40 + 1n Goliath",playerID,"Anywhere",Attack,v.P_LocationID[playerID]);
				trg.Main_Wait(200);
			}
			else if (v.P_LoopMain[playerID] <= 7)
			{
				trg.Shape_Line(playerID,1,"40 + 1n Gantrithor",0+x,2,192,0);
				trg.Shape_Line(playerID,1,"40 + 1n Gantrithor",90+x,2,192,0);
				KillUnitAt(All,"40 + 1n Gantrithor","Anywhere",playerID);
				x += 30;
				trg.Main_Wait(100);
			}
			else if (v.P_LoopMain[playerID] == 8)
			{
				trg.Shape_Square(playerID,1,"40 + 1n Guardian",128,128);
				trg.Shape_Square(playerID,1,"40 + 1n Guardian",128,80);
				trg.Shape_Square(playerID,1,"40 + 1n Guardian",80,128);
				trg.Shape_Square(playerID,1,"40 + 1n Guardian",80,80);
				trg.MoveLoc(v.P_UnitID[playerID],playerID,0,0);
				Order("40 + 1n Guardian",playerID,"Anywhere",Attack,v.P_LocationID[playerID]);
				x = 0;
				trg.Main_Wait(300);
			}
			else if (v.P_LoopMain[playerID] == 9)
			{
				trg.SkillEnd();
			}
			
			v.P_LoopMain[playerID] += 1;
		}
	}
}