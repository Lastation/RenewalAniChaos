	case 34:		// High Templar
		if 		(unitID.PlayerID[playerID] == 8) 		{ t.T_CharaterNum[playerID] = 29; }	// Ekidona
		else 										{ t.T_CharaterNum[playerID] = v.P_HeroID[playerID]; }
		 unitID.UnitID[playerID] = 0;
