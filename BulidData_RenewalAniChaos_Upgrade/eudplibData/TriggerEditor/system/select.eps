import variable as v;
import func.text as t;
import system.getUnitID as unitID;

function SelectText(playerID)
{
	switch (unitID.UnitID[playerID])
	{
	case 51:		// Infested Kerrigan
		if 		(unitID.PlayerID[playerID] == 8) 		{ t.T_CharaterNum[playerID] = 1;   }	// Rusaruka
		else if 	(unitID.PlayerID[playerID] == 9)		{ t.T_CharaterNum[playerID] = 8;   }	// Anzu
		else if 	(unitID.PlayerID[playerID] == 10)		{ t.T_CharaterNum[playerID] = 9;   }	// HotoMoka
		else if 	(unitID.PlayerID[playerID] == 11) 		{ t.T_CharaterNum[playerID] = 19; }	// Margot & Naruge
		else 										{ t.T_CharaterNum[playerID] = v.P_HeroID[playerID]; }
		 unitID.UnitID[playerID] = 0;
		break;
	case 77:		// Fenix (Zealot)
		if 		(unitID.PlayerID[playerID] == 8) 		{ t.T_CharaterNum[playerID] = 2;   }	// Chtholly
