import variable as v;
import func.trig as trg;

function main(playerID)
{
   MoveLocation("23.Mayuri_Bozo", v.P_UnitID[playerID], playerID, "Anywhere");

   if (v.P_WaitMain[playerID] == 0)
   {
      if (v.P_CountMain[playerID] == 0)
      {
         SetSwitch("Recall - Mayuri", Set);

         if (playerID < 3) SetSwitch("Unique - Mayuri1", Set);
         else SetSwitch("Unique - Mayuri2", Set);

         SetDeaths(playerID, SetTo, 1080, " `UniqueCoolTime");
         SetDeaths(playerID, SetTo, 180, " `UniqueSkill");

         trg.Main_Wait(80);

         v.P_CountMain[playerID] += 1;
      }
      else if (v.P_CountMain[playerID] == 1)
      {
         SetSwitch("Recall - Mayuri", Clear);
         trg.SkillEnd();
      }
   }
}