import PluginVariables as msqcvar;
import variable as v;
import func.trig as trg;

function Shape(playerID : TrgPlayer, x, y);

function main(playerID)
{
   if (v.P_WaitMain[playerID] == 0)
   {
      if (v.P_CountMain[playerID] == 0)
      {
         if (v.P_LoopMain[playerID] == 0) Shape(playerID, 50, 50);
         else if (v.P_LoopMain[playerID] == 1) Shape(playerID, 0, 50);
         else if (v.P_LoopMain[playerID] == 2) Shape(playerID, -50, 50);
         else if (v.P_LoopMain[playerID] == 3) Shape(playerID, -50, 0);


         trg.Main_Wait(160);

         v.P_LoopMain[playerID] += 1;

         if (v.P_LoopMain[playerID] == 4)
         {
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;
         }
      }
      else if (v.P_CountMain[playerID] == 1)
      {
         if (v.P_LoopMain[playerID] == 0)
         {         
            KillUnitAt(All, " Creep. Dunkelheit", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, "60 + 1n Archon", 0, 5, 100);
            KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);

            trg.Main_Wait(160);
            v.P_LoopMain[playerID] += 1;
         }
         else if (v.P_LoopMain[playerID] == 1)
         {         
            trg.Shape_Edge(playerID, 1, "60 + 1n Danimoth", 0, 5, 100);
            KillUnitAt(All, "60 + 1n Danimoth", "Anywhere", playerID);
            trg.Shape_Edge(playerID, 1, "40 + 1n Goliath", 0, 3, 100);

            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Goliath", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Goliath", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);

            trg.Main_Wait(160);
            v.P_LoopMain[playerID] += 1;
         }
         else if (v.P_LoopMain[playerID] == 2)
         {         
            KillUnitAt(All, "40 + 1n Goliath", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, "Kakaru (Twilight)", 0, 5, 100);
            KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);

            trg.Main_Wait(480);
            v.P_LoopMain[playerID] += 1;
         }
         else if (v.P_LoopMain[playerID] == 3)
         {         
            trg.Shape_Edge(playerID, 1, "60 + 1n Danimoth", 45, 5, 100);
            KillUnitAt(All, "60 + 1n Danimoth", "Anywhere", playerID);
            trg.Shape_Edge(playerID, 1, "40 + 1n Goliath", 45, 5, 100);

            MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
            MoveUnit(All, "40 + 1n Goliath", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
            Order("40 + 1n Goliath", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);

            trg.Main_Wait(160);
            v.P_LoopMain[playerID] += 1;
         }
         else if (v.P_LoopMain[playerID] == 4)
         {         
            KillUnitAt(All, "40 + 1n Goliath", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, "40 + 1n Gantrithor", 45, 7, 150);
            trg.Shape_Edge(playerID, 1, "60 + 1n Archon", 45, 7, 150);
            KillUnitAt(All, "40 + 1n Gantrithor", "Anywhere", playerID);
            KillUnitAt(All, "60 + 1n Archon", "Anywhere", playerID);

            trg.Shape_Edge(playerID, 1, "Kakaru (Twilight)", 45, 5, 100);
            KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);

            trg.Main_Wait(80);
            
            v.P_CountMain[playerID] += 1;
            v.P_LoopMain[playerID] = 0;
         }
      }
      else if (v.P_CountMain[playerID] == 2)
      {
         KillUnitAt(All, "40 + 1n Ghost", "Anywhere", playerID);
         trg.SkillEnd();
      }
   }
}

function Shape(playerID : TrgPlayer, x, y)
{
   KillUnitAt(All, " Creep. Dunkelheit", "Anywhere", playerID);
   trg.Shape_Dot(playerID, 1, "Protoss Dark Templar", x, y);
   trg.Shape_Dot(playerID, 1, "Protoss Dark Templar", -x, -y);
   trg.Shape_Dot(playerID, 1, "40 + 1n Mojo", x, y);
   trg.Shape_Dot(playerID, 1, "40 + 1n Mojo", -x, -y);
   trg.Shape_Dot(playerID, 1, "Kakaru (Twilight)", -y, x);
   trg.Shape_Dot(playerID, 1, "Kakaru (Twilight)", y, -x);
   trg.Shape_Dot(playerID, 1, " Creep. Dunkelheit", -y, x);
   trg.Shape_Dot(playerID, 1, " Creep. Dunkelheit", y, -x);
   KillUnitAt(All, "40 + 1n Mojo", "Anywhere", playerID);
   KillUnitAt(All, "Protoss Dark Templar", "Anywhere", playerID);
   KillUnitAt(All, "Kakaru (Twilight)", "Anywhere", playerID);
   MoveLocation(v.P_LocationID[playerID], v.P_UnitID[playerID], playerID, "Anywhere");
   MoveUnit(All, " Creep. Dunkelheit", playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
   Order(" Creep. Dunkelheit", playerID, "Anywhere", Attack, v.P_LocationID[playerID]);
}