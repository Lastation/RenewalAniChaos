function LineShape(playerID : TrgPlayer, count, Unit : TrgUnit, degree, n, interval, distance)
{
   trg.Shape_Line(playerID, count, Unit, degree, n, interval, distance);
   trg.Shape_Line(playerID, count, Unit, degree + 90, n, interval, distance);
   trg.Shape_Line(playerID, count, Unit, degree + 180, n, interval, distance);
   trg.Shape_Line(playerID, count, Unit, degree + 270, n, interval, distance);
}

