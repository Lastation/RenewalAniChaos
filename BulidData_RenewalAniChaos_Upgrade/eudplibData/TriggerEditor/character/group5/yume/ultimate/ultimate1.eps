function MoveLoc(Unit : TrgUnit, playerID : TrgPlayer, x, y)
{
   MoveLocation(v.P_LocationID[playerID], "Zerg Defiler", playerID, "Anywhere");
   addloc(v.P_LocationID[playerID], x, y);
}

function SkillUnit(playerID : TrgPlayer, count, Unit : TrgUnit)
{
   CreateUnit(count, Unit, dwrand() % 8 + 33, playerID);
   SetInvincibility(Enable, Unit, playerID, "[Skill]Unit_Wait_ALL");
   MoveUnit(count, Unit, playerID, "[Skill]Unit_Wait_ALL", v.P_LocationID[playerID]);
}

function SquareShapeAt(playerID : TrgPlayer, count, Unit : TrgUnit, x, y, distanceX, distanceY)
{
   MoveLoc(v.P_UnitID[playerID], playerID, x + distanceX, y + distanceY);
   SkillUnit(playerID, count, Unit);
   MoveLoc(v.P_UnitID[playerID], playerID, -y + distanceX, x + distanceY);
   SkillUnit(playerID, count, Unit);
   MoveLoc(v.P_UnitID[playerID], playerID, -x + distanceX, -y + distanceY);
   SkillUnit(playerID, count, Unit);
   MoveLoc(v.P_UnitID[playerID], playerID, y + distanceX, -x + distanceY);
   SkillUnit(playerID, count, Unit);
}

function NxNSquareShapeAt(playerID : TrgPlayer, count, Unit : TrgUnit, n, interval, distanceX, distanceY)
{
   var i = 0;
   var destX, destY; 
   var distance = interval / 2;
   var size = n * n;
   
   for (; i < size / 4; i++)
   {
      if (n == 1)
      {
         MoveLoc(v.P_UnitID[playerID] ,playerID, distanceX, distanceY);
         SkillUnit(playerID, count, Unit);
      }
      else if (n % 2 == 0)
      {
         destX = i % (n / 2) + 1;
         destY = i / (n / 2) + 1;
         
         if (destX == 1)
         {
            SquareShapeAt(playerID, count, Unit, distance, destY * interval - distance, distanceX, distanceY);
         }
         else if (destY == 1)
         {
            SquareShapeAt(playerID, count, Unit, destX * interval - distance, distance, distanceX, distanceY);
         }
         else
         {
            SquareShapeAt(playerID, count, Unit, destX * interval - distance, destY * interval - distance, distanceX, distanceY);
         }
      }
      else if (n % 2 == 1)
      {
         destX = i % (n / 2);
         destY = i / (n / 2);
   
         if (i == 0)
         {
            MoveLoc(v.P_UnitID[playerID] ,playerID, distanceX, distanceY);
            SkillUnit(playerID, count, Unit);
         }
         else if (destY == 0)
         {
            SquareShapeAt(playerID, count, Unit, destX * interval, 0, distanceX, distanceY);
         }
         else
         {
            SquareShapeAt(playerID, count, Unit, destX * interval + interval, destY * interval, distanceX, distanceY);
         }
         
         if (i == size / 4 - 1)
         {
            SquareShapeAt(playerID, count, Unit, (n / 2) * interval, 0, distanceX, distanceY);
         }
      }
   }
}