import PluginVariables as msqcvar;
import variable as v;
import func.trig as trg;
import func.debuff as debuff;

function main(playerID) 
{
   debuff.gozo_debuff(playerID);
}

function gozo_debuff(playerID)
{
   if (v.P_GozoDebuff[playerID] > 0)
   {
   	
      if (v.P_GozoDebuff[playerID] > 1) 
      {
         
         SetAllianceStatus(P1, Ally);
         SetAllianceStatus(P2, Ally);
         SetAllianceStatus(P3, Ally);
         SetAllianceStatus(P4, Ally);
         SetAllianceStatus(P5, Ally);
         SetAllianceStatus(P6, Ally);
         SetAllianceStatus(P7, Ally);
         SetAllianceStatus(P8, Ally);
      }
      else if (v.P_GozoDebuff[playerID] == 1)
      {
         
         if (playerID < 3)
         {
            SetAllianceStatus(P4, Enemy);
            SetAllianceStatus(P5, Enemy);
            SetAllianceStatus(P6, Enemy);
            SetAllianceStatus(P8, Enemy);
         }
         else if (playerID >= 3)
         {
            SetAllianceStatus(P1, Enemy);
            SetAllianceStatus(P2, Enemy);
            SetAllianceStatus(P3, Enemy);
            SetAllianceStatus(P7, Enemy);
         }
         
         v.P_GozoDebuff[playerID] = 0;
      }
   }
   
   if (v.P_GozoDebuff_Ally[playerID] > 0)
   {
      if (v.P_GozoDebuff_Ally[playerID] == 3) 
      {
         SetAllianceStatus(P1, Ally);
         SetAllianceStatus(P2, Ally);
         SetAllianceStatus(P3, Ally);
         SetAllianceStatus(P4, Ally);
         SetAllianceStatus(P5, Ally);
         SetAllianceStatus(P6, Ally);
         SetAllianceStatus(P7, Ally);
         SetAllianceStatus(P8, Ally);
      }
      else if (v.P_GozoDebuff_Ally[playerID] == 2) 
      {
         if (playerID < 3)
         {
            SetAllianceStatus(P4, Enemy);
            SetAllianceStatus(P5, Enemy);
            SetAllianceStatus(P6, Enemy);
         }
         else if (playerID >= 3)
         {
            SetAllianceStatus(P1, Enemy);
            SetAllianceStatus(P2, Enemy);
            SetAllianceStatus(P3, Enemy);
         }
      }
      else if (v.P_GozoDebuff_Ally[playerID] == 1)
      {
         if (playerID < 3)
         {
            SetAllianceStatus(P4, Enemy);
            SetAllianceStatus(P5, Enemy);
            SetAllianceStatus(P6, Enemy);
            SetAllianceStatus(P8, Enemy);
         }
         else if (playerID >= 3)
         {
            SetAllianceStatus(P1, Enemy);
            SetAllianceStatus(P2, Enemy);
            SetAllianceStatus(P3, Enemy);
            SetAllianceStatus(P7, Enemy);
         }
         
         v.P_GozoDebuff_Ally[playerID] = 0;
      }
   }
}